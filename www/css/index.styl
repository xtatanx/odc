*
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select html
  user-select html

body
  -webkit-text-size-adjust none
  -webkit-touch-callout none
  -webkit-user-select none
  background-attachment fixed
  background-color #2ab3e7 !important
  font-family 'quicksandlight', 'HelveticaNeue', Helvetica, Arial, sans-serif
  font-size 16px
  height 100%
  margin 0px
  padding 0px
  text-transform uppercase
  width 100%

// jquery ui overrides
.ui-content
  padding-bottom 0
  padding-top 0
  height 100%
  overflow-y scroll
  -webkit-overflow-scrolling touch 

.ui-overlay-a, .ui-page-theme-a, .ui-page-theme-a .ui-panel-wrapper
  background #2ab3e7

.ui-grid-b>.ui-block-a, .ui-grid-b>.ui-block-b, .ui-grid-b>.ui-block-c 
  text-align center  

.ui-page-theme-a .ui-bar-inherit 
  background none
  border-bottom 1px solid #fff
  & h1
    color #fff
    text-shadow none
    font-weight normal
 
// my styles
[data-role="page"]
  background #2ab3e7

#chartCanvas
  margin .5em auto
  display block

#drug
  margin 1em 0 
  img
    width 100%

#drug_item > .ui-content
  box-sizing border-box
  -webkit-box-sizing border-box
  position relative

#footer
  text-align center

#header, #footer
  background #fff
  height auto

#home
  -moz-background-size cover
  background-size cover

#info_panel
  position fixed
    

#odc_info
  background-color #fff
  border none
  top 1em
  &:after
    background-color #2ab3e7
    background-color rgba(#2ab3e7, .8) 
    width 34px
    height 34px
    margin-top -17px
    margin-left -17px
    background-size 22px 22px  

#tabs
  -webkit-box-sizing border-box
  box-sizing border-box 
  height 100% 

.aditional_info
  margin 1em 0 

.ui-page-theme-a .back_btn
  background none
  border none
  text-shadow none
  box-shadow none
  font-size 18px
  color #fff
  text-transform none
  font-weight normal
  line-height 2  

.drug_bg
  position absolute
  top 0
  left 0
  width 100%
  height 100% 
  background-size cover
  -webkit-background-size cover
  background-position center center
  background-attachment fixed

.drug_title
  color #fff
  text-shadow none
  font-weight normal
  margin .3em 0

.drug_label
  color #fff
  text-transform none
  text-shadow none 
  position relative
  white-space nowrap

.drug_statistic
  position absolute
  right 0
  top 0
  font-size 2em 
  float right
  border 2px solid #fff
  padding .4em
  border-radius 50%
  width 40px
  height 40px
  text-align center 
  line-height 1.2 

.drug_chart_title
  color #fff
  text-shadow 1px 1px 0 rgba(0,0,0, .2)
  font-size 1em
  text-align center
  font-weight normal

.ellipsis
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
  display block
  margin .5em 0
  color #fff  

.footer_logo  
  width 28%
  display inline-block
  vertical-align middle
  padding-top 16px
  & + .footer_logo
    margin-left 4%

  & img
    width 100%

.hr
  width 90%
  margin 6px auto
  height 3px
  background #28328a    

.home_title
  font-size 2em
  color #fff
  text-align center
  text-shadow none
  font-weight normal
  margin .67em 0

.home_introduction
  color #fff
  text-shadow none
  font-size 1em
  text-transform none
  text-align center 


.legend
  background #fafafa
  & .title
    text-transform none
    text-shadow none
    font-size 1em   

// .marihuana_bg 
//   background-image url(../img/marihuana.jpg) 

.menu_btn_wrapper
  width 100%
  padding 8px 0

.menu_btn
  -moz-box-sizing border-box
  border .2em solid #fff
  border-radius 50%
  box-sizing border-box
  display inline-block 
  padding-top 90%
  text-align center
  text-decoration none
  width 90%
  margin 0 auto
  position relative
  font-weight normal
  &:before
    font-size 3em
    position absolute
    top 50%
    left 50%
    margin-top -24px
    margin-left -24.5px
    color #fff
    text-shadow none
    font-weight normal

.menu_btn_link
  display block
  width 100%
  height 100%
  text-decoration none

.odc_logo
  display block
  height 46px
  margin 0 auto
  padding 9px 0
  width 182px
  & img
    width 100%    

.red_point
  background url(../img/red-point.png) 0 0 no-repeat
  height 30px
  width 30px
  position absolute
  top 28%
  left 56% 

.red_point2
  background url(../img/red-point.png) 0 0 no-repeat
  height 30px
  width 30px
  position absolute
  top 10%
  left 46%     

.tab_body
  box-sizing border-box
  -webkit-box-sizing border-box
  height 100%
  position relative
  & h1
    text-align center    

.ui-page-theme-a .tab
  background none
  color #fff
  font-weight normal    
  text-shadow none
  border-color #fff

.silueta
  width 100%
  max-width 320px
  margin 0 auto  
  display block
  position relative 
  img
    width 100% 

@media screen and (min-width: 480px)
  .menu_btn
    &:before
      font-size 5em
      margin-left - 40.5px
      margin-top - 40px    

@media screen and (min-width: 768px)
  .menu_btn
    &:before
      font-size 7em
      margin-left - 56.5px
      margin-top - 56px    






    

