*
  -webkit-tap-highlight-color rgba(0,0,0,0)

body
  -webkit-touch-callout none
  -webkit-text-size-adjust none
  -webkit-user-select none
  background-color #000
  background-attachment fixed
  font-family 'quicksandlight', 'HelveticaNeue', Helvetica, Arial, sans-serif
  font-size 16px
  height 100%
  margin 0px
  padding 0px
  text-transform uppercase
  width 100%

// jquery ui overrides
.ui-overlay-a, .ui-page-theme-a, .ui-page-theme-a .ui-panel-wrapper
  background #272727

.ui-grid-b>.ui-block-a, .ui-grid-b>.ui-block-b, .ui-grid-b>.ui-block-c 
  text-align center  

.ui-page-theme-a .ui-bar-inherit 
  background none
  border-bottom 1px solid #fff
  & h1
    color #fff
    text-shadow none
    font-weight normal
 
// my styles
[data-role="page"]
  background url(../img/bg_home.jpg) center center no-repeat
#drug
  margin 1em 0 
  img
    width 100%
#drug_item > .ui-content
  box-sizing border-box
  -webkit-box-sizing border-box
  position relative
#home
  -moz-background-size cover
  background-size cover  

#tabs
  -webkit-box-sizing border-box
  box-sizing border-box 
  height 100% 

.aditional_info
  margin 1em 0 

.ui-page-theme-a .back_btn
  background none
  border none
  text-shadow none
  box-shadow none
  font-size 18px
  color #fff
  text-transform none
  font-weight normal
  line-height 2  

.drug_bg
  position absolute
  top 0
  left 0
  width 100%
  height 100% 
  background-size cover
  -webkit-background-size cover
  background-position center center
  background-attachment fixed

.drug_title
  color #fff
  text-shadow none
  font-weight normal
  margin .3em 0

.drug_label
  color #fff
  text-transform none
  text-shadow none 
  position relative
  line-height 4.4
  & + .drug_label
    margin-top 1em

.drug_statistic
  position absolute
  right 0
  top 0
  font-size 2em 
  float right
  border 2px solid #fff
  padding .4em
  border-radius 50%
  width 40px
  height 40px
  text-align center 
  line-height 1.2 


.home_title
  font-size 2em
  color #fff
  text-align center
  text-shadow none
  font-weight normal
  margin .67em 0

.home_introduction
  color #fff
  text-shadow none
  font-size 1em
  text-transform none
  text-align center 

// .marihuana_bg 
//   background-image url(../img/marihuana.jpg) 

.menu_btn_wrapper
  padding 1em 9px
  display inline-block

.menu_btn
  width 100px
  padding 26px 0
  border .2em solid #fff
  display block 
  border-radius 100%
  text-align center
  text-decoration none
  &:before
    font-size 3em
    vertical-align middle
    color #fff
    text-shadow none
  &__tap
    background #fff

.tab_body
  box-sizing border-box
  -webkit-box-sizing border-box
  height 100%
  position relative
  & h1
    text-align center    

.ui-page-theme-a .tab
  background none
  color #fff
  font-weight normal    
  text-shadow none
  border-color #fff

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
  body
    font-size 28px

  .aditional_info
    margin .5em 0

  .ui-btn-icon-notext.ui-btn-left    
    top 1.1em
    left 1em
  .menu_btn:before
    font-size 1.8em

  .drug_label
    line-height 3.2

  .drug_statistic 
    width 80px
    height 80px
    line-height 1.5  
    padding 0 

  // overrides ui css
  .ui-btn-icon-left:after, .ui-btn-icon-right:after, .ui-btn-icon-top:after, .ui-btn-icon-bottom:after, .ui-btn-icon-notext:after
    width 40px
    height 40px
    margin-top -20px
    margin-left -20px

  .ui-btn-icon-notext    
    width 40px
    height 40px

  .ui-icon-back:after
    backgorund-size 60%
    -webkit-background-size 60%

  .ui-page-theme-a .tab    
    font-size 16px !important





    

