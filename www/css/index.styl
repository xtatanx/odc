*
  -webkit-tap-highlight-color rgba(0,0,0,0)

body
  -webkit-touch-callout none
  -webkit-text-size-adjust none
  -webkit-user-select none
  background-color #2ab3e7 !important
  background-attachment fixed
  font-family 'quicksandlight', 'HelveticaNeue', Helvetica, Arial, sans-serif
  font-size 16px
  height 100%
  margin 0px
  padding 0px
  text-transform uppercase
  width 100%

// jquery ui overrides
.ui-content
  padding-bottom 0
  padding-top 0
  height 100%
  overflow-y scroll
  -webkit-overflow-scrolling touch 

.ui-overlay-a, .ui-page-theme-a, .ui-page-theme-a .ui-panel-wrapper
  background #272727

.ui-grid-b>.ui-block-a, .ui-grid-b>.ui-block-b, .ui-grid-b>.ui-block-c 
  text-align center  

.ui-page-theme-a .ui-bar-inherit 
  background none
  border-bottom 1px solid #fff
  & h1
    color #fff
    text-shadow none
    font-weight normal
 
// my styles
[data-role="page"]
  background #2ab3e7

#chartCanvas
  margin .5em auto
  display block

#drug
  margin 1em 0 
  img
    width 100%

#drug_item > .ui-content
  box-sizing border-box
  -webkit-box-sizing border-box
  position relative

#footer
  text-align center

#header, #footer
  background #fff

#home
  -moz-background-size cover
  background-size cover  

#tabs
  -webkit-box-sizing border-box
  box-sizing border-box 
  height 100% 

.aditional_info
  margin 1em 0 

.ui-page-theme-a .back_btn
  background none
  border none
  text-shadow none
  box-shadow none
  font-size 18px
  color #fff
  text-transform none
  font-weight normal
  line-height 2  

.drug_bg
  position absolute
  top 0
  left 0
  width 100%
  height 100% 
  background-size cover
  -webkit-background-size cover
  background-position center center
  background-attachment fixed

.drug_title
  color #fff
  text-shadow none
  font-weight normal
  margin .3em 0

.drug_label
  color #fff
  text-transform none
  text-shadow none 
  position relative
  line-height 4.4
  & + .drug_label
    margin-top 1em

.drug_statistic
  position absolute
  right 0
  top 0
  font-size 2em 
  float right
  border 2px solid #fff
  padding .4em
  border-radius 50%
  width 40px
  height 40px
  text-align center 
  line-height 1.2 

.drug_chart_title
  color #fff
  text-shadow 1px 1px 0 rgba(0,0,0, .2)
  font-size 1em
  text-align center
  font-weight normal

.footer_logo  
  width 28%
  display inline-block
  vertical-align middle
  padding-top 16px
  & + .footer_logo
    margin-left 4%

  & img
    width 100%

.hr
  width 90%
  margin 6px auto
  height 3px
  background #28328a    

.home_title
  font-size 2em
  color #fff
  text-align center
  text-shadow none
  font-weight normal
  margin .67em 0

.home_introduction
  color #fff
  text-shadow none
  font-size 1em
  text-transform none
  text-align center 


.legend
  background #fafafa
  & .title
    text-transform none
    text-shadow none
    font-size 1em   

// .marihuana_bg 
//   background-image url(../img/marihuana.jpg) 

.menu_btn_wrapper
  padding 1em 9px
  display inline-block

.menu_btn
  width 100px
  border .2em solid #fff
  display block 
  border-radius 100%
  text-align center
  text-decoration none
  height 100px
  &:before
    font-size 3em
    vertical-align middle
    color #fff
    text-shadow none

.odc_logo
  display block
  margin 0 auto
  width 182px
  height 46px
  padding 7px 0
  & img
    width 100%

.red_point
  background url(../img/red-point.png) 0 0 no-repeat
  height 30px
  width 30px
  position absolute
  top 28%
  left 56% 

.red_point2
  background url(../img/red-point.png) 0 0 no-repeat
  height 30px
  width 30px
  position absolute
  top 10%
  left 46%     

.tab_body
  box-sizing border-box
  -webkit-box-sizing border-box
  height 100%
  position relative
  & h1
    text-align center    

.ui-page-theme-a .tab
  background none
  color #fff
  font-weight normal    
  text-shadow none
  border-color #fff

.silueta
  width 100%
  max-width 320px
  margin 0 auto  
  display block
  position relative 
  img
    width 100% 

  






    

